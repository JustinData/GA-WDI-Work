   
<!-- calls the first item in the movie_array which is equal to the id number. Passes this into the file path to show that indivudual movie -->
<body id="movie">
   <section>
    <%@results.each do |row|%>
    <h2><a href="/movies/<%= row["id"]%>">Entry:</a></h2>
    <ul>
      <li>Year: <%= row["year"]%></li>
      <li><img src="<%= row["poster"]%>"></li>
      <li>Title: <%= row["title"]%></li>
      <%end%>
    </ul>
  </section>
</body>


