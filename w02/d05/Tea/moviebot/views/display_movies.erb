<% file = File.new("movies.txt", "r") %>

<% file.each do |line| %>
<% item = line.split(", ") %>
<% title = "#{item[1]}" %>
<% year =  "(#{item[2]})" %>
<% poster_url =  "#{item[3]}" %>
  <div class="single-movie">
  <ul>
    <li class="title"><%= title %></li>
    <li class="sub"><%= year %></li>
    <li><img src=<%=poster_url%></li>
  </ul>
  </div>

<% end %>

<% file.close %>
