<h1>All Movies Below!</h1>
<p>
	<% file = File.new("movies.txt", "r") %>
	<% file.each do |line| %>
		<% movies_array = line.split(",") %>
		<%= "ID: #{movies_array[0]}" %>
		<br>
		<%= "Title: #{movies_array[1]}" %>
		<br>
		<%= "Year: #{movies_array[2]}" %>
		<br>
		<img src="<%="#{movies_array[3]}"%>" alt="">
		<br>
		<br>
	<% end %>
	<% file.close %>
</p>
