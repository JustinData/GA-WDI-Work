<div class="movies">
    <% file = File.new("movies.txt", "a+") %>

  <% file.each do |line| %>
    <div class="movie">
      <% values = line.split(",") %>
      <div class="poster">
        <img src="<%= "#{values[3]}" %>" />
      </div>
      <div class="info">
        <p><strong>Title :</strong> <%= "#{values[1]}" %></p>
        <p><strong>Year :</strong> <%= "#{values[2]}" %></p>
      </div>
    </div>
  <% end %>

  <% file.close %>
</div>  